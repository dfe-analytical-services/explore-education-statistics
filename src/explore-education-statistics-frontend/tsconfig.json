{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "../explore-education-statistics-common/src/*"
      ],
      "@common-test/*": [
        "../explore-education-statistics-common/test/*"
      ],
      "@frontend/*": [
        "./src/*"
      ],
      "@frontend-test/*": [
        "./test/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "test",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}
