{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "target": "ESNext",
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["*.ts", "utils/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
